<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textSize="16sp"
            android:paddingBottom="12dp" />

        <!-- File Swapper Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ File Swapper"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Replace and restore game asset files"
                    android:textSize="14sp"
                    android:alpha="0.7"
                    android:paddingBottom="16dp" />

                <Button
                    android:id="@+id/pickButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick File (SAF)" />

                <Button
                    android:id="@+id/replaceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Replace File"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/restoreButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restore Original"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Auto-Clicker Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ–±ï¸ Auto-Clicker"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Automated clicking with customizable presets"
                    android:textSize="14sp"
                    android:alpha="0.7"
                    android:paddingBottom="16dp" />

                <Button
                    android:id="@+id/autoClickerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Launch Auto-Clicker" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: Allow storage and accessibility permissions when prompted"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:alpha="0.6" />

    </LinearLayout>

</ScrollView>
